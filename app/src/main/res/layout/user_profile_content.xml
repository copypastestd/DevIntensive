<!--app:layout_behavior=".ui.behavior.CustomNestedScrollBehavior"-->
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_behavior=".ui.behavior.CustomNestedScrollBehavior"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/row_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"/>

            <LinearLayout
                style="@style/data_linear"
                android:id="@+id/phone_layout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/edit"
                        android:id="@+id/phone_et"
                        android:inputType="phone"
                        android:text="@string/phone_et_text"
                        android:hint="@string/phone"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:id="@+id/call_img"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72"/>

        <LinearLayout
            style="@style/row_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_mail_black_24dp"/>

            <LinearLayout
                style="@style/data_linear"
                android:id="@+id/email_layout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/edit"
                        android:id="@+id/email_et"
                        android:hint="@string/e_mail"
                        android:inputType="textEmailAddress"
                        android:text="@string/email_et_text"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:id="@+id/send_email_img"
                android:src="@drawable/ic_send_black_24dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72"/>

        <LinearLayout
            style="@style/row_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_vk"/>

            <LinearLayout
                style="@style/data_linear"
                android:id="@+id/vk_layout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_vk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/edit"
                        android:id="@+id/vk_et"
                        android:hint="@string/vk"
                        android:inputType="textUri"
                        android:text="@string/vk_et_text"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:id="@+id/watch_vk_img"
                android:src="@drawable/ic_visibility_black_24dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72"/>

        <LinearLayout
            style="@style/row_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_github"/>

            <LinearLayout
                style="@style/data_linear"
                android:id="@+id/github_layout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/edit"
                        android:id="@+id/github_et"
                        android:hint="@string/repo"
                        android:inputType="textUri"
                        android:text="@string/github_et_text"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:id="@+id/watch_github_img"
                android:src="@drawable/ic_visibility_black_24dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72"/>

        <LinearLayout
            style="@style/row_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                style="@style/data_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/edit"
                        android:id="@+id/bio_et"
                        android:paddingRight="@dimen/spacing_medium_32"
                        android:hint="@string/about"
                        android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
                        android:text="@string/bio_et_text"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>