<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.design.widget.CoordinatorLayout

        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">
            
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                
                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_photo"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>


        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <!--android:layout_marginTop="@dimen/size_medium_56"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_medial_24"
                    android:paddingTop="@dimen/spacing_medial_24">

                    <LinearLayout
                        style="@style/container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="1">

                        <TextView
                            style="@style/text.up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"/>

                        <TextView
                            style="@style/text.down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Рейтинг"/>

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/line_size"
                        android:layout_height="72dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        style="@style/container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="2">

                        <TextView
                            style="@style/text.up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2500"/>

                        <TextView
                            style="@style/text.down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Написано строк кода" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/line_size"
                        android:layout_height="72dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        style="@style/container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_weight="1">

                        <TextView
                            style="@style/text.up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5" />

                        <TextView
                            style="@style/text.down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Проектов" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/row_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <LinearLayout
                        style="@style/data_linear"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/edit"
                                android:id="@+id/phone_et"
                                android:inputType="phone"
                                android:text="+79268642675"
                                android:hint="@string/phone"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    style="@style/row_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_mail_black_24dp"/>

                    <LinearLayout
                        style="@style/data_linear"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/edit"
                                android:id="@+id/email_et"
                                android:hint="@string/e_mail"
                                android:inputType="textEmailAddress"
                                android:text="qwsa@mail.xyz"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    style="@style/row_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk"/>

                    <LinearLayout
                        style="@style/data_linear"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/edit"
                                android:id="@+id/vk_et"
                                android:hint="@string/vk"
                                android:inputType="textUri"
                                android:text="vk.com/rain_man"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    style="@style/row_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_github"/>

                    <LinearLayout
                        style="@style/data_linear"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/edit"
                                android:id="@+id/github_et"
                                android:hint="@string/repo"
                                android:inputType="textEmailAddress"
                                android:text="github.com/copypastestd"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <LinearLayout
                    style="@style/row_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <LinearLayout
                        style="@style/data_linear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                style="@style/edit"
                                android:id="@+id/bio_et"
                                android:paddingRight="@dimen/spacing_medium_32"
                                android:hint="@string/about"
                                android:inputType="textMultiLine|textCapSentences"
                                android:text="@string/lorem_ipsum"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>

    </android.support.design.widget.CoordinatorLayout>
    
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
